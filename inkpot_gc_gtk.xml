<style-scheme id="inkpot_gc_gtk" name="Inkpot GC GTK" version="1.0">
  <!--Main colors-->
  <color name="black"         value="#030303"/>
  <color name="blue"          value="#409090"/>
  <color name="bright-purple" value="#7e7eae"/>
  <color name="dark-purple"   value="#1e1e27"/>
  <color name="green"         value="#5cd089"/>
  <color name="intense-green" value="#00ff8b"/>
  <color name="orange"        value="#cd8b00"/>
  <color name="pink"          value="#ff8bff"/>
  <color name="purple"        value="#4b208f"/>
  <color name="chrome"        value="#d0d1f7"/>
  <color name="red"           value="#6e2e2e"/>
  <color name="white"         value="#ffffff"/>
  <color name="yellow"        value="#ffcd00"/>

  <!--Global styles-->
  <style name="bracket-match" foreground="orange"/>
  <style name="cursor"        foreground="green"/>
  <style name="current-line"  background="bright-purple"/>
  <style name="line-numbers"  foreground="bright-purple" background="purple"/>
  <style name="selection"     foreground="white" background="purple"/>
  <style name="search-match"  foreground="black" background="orange"/>
  <style name="text"          foreground="green" background="dark-purple"/>
  <style name="right-margin"  foreground="bright-purple"
  background="bright-purple"/>

  <!--Syntax highlighting-->
  <style name="def:comment"      foreground="intense-green"/>
  <style name="def:constant"     foreground="orange"/>
  <style name="def:error"        foreground="white" background="red"/>
  <style name="def:number"       foreground="orange"/>
  <style name="def:preprocessor" foreground="blue"/>
  <style name="def:shebang"      foreground="intense-green" bold="true"/>
  <style name="def:special-char" foreground="bright-purple"/>
  <style name="def:statement"    foreground="chrome"/>
  <style name="def:string"       foreground="orange"/>
  <style name="def:type"         foreground="pink"/>

  <!--Diff highlighting-->
  <style name="diff:added-line"   foreground="yellow"
  background="intense-green"/>
  <style name="diff:changed-line" foreground="yellow" background="blue"/>
  <style name="diff:removed-line" foreground="yellow" background="red"/>
</style-scheme>
